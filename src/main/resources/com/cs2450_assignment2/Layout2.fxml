<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane 
prefHeight="1080" prefWidth="1920"
xmlns="http://javafx.com/javafx/25" 
xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="com.cs2450_assignment2.Controller">
   
   <children>
   <!-- Fixed Header: contains School name and navbar-->
   <!-- VBox: First = School name, Second = Navbar -->
      <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <HBox style="-fx-background-color: #2E8B57;" prefHeight="60.0" prefWidth="600.0" alignment="CENTER_LEFT" spacing="10.0">
            <children>
               <!-- Header: Yale School of Art -->
               <Label text="Yale School of Art"/>
               <!-- Sets spacing between-->
               <Region HBox.hgrow="ALWAYS" />
               <!-- NavBar -->
               <HBox spacing="16" alignment="CENTER_LEFT">
                  <padding>
                     <Insets top="8" right="8" bottom="8" left="8"/>
                  </padding>
                  <children>
                     <Button text="Home"        onAction="#handleHomeButton" />

                     <Button text="About" onAction="#handleAboutButton" />

                     <Button text="Exhibitions" onAction="#handleExhibitionsButton" />

                     <Button text="Publications" onAction="#handlePublicationsButton" />
                     
                     <Button text="News" onAction="#handleNewsButton" />
                     
                     <Button text="Public Events" onAction="#handlePublicEventsButton" />
                     
                     <Button text="Apply" onAction="#handleApplyButton" />
                  </children>
                  </HBox>
            </children>
            </HBox>
      </VBox>
      <!-- Scrollable Content -->
      <ScrollPane AnchorPane.topAnchor="60.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" fitToWidth="true">
         <!-- School Image -->
         <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
         <!-- -->
         <content>
            <VBox fx:id="contentArea" spacing="16">
               <padding>
                  <Insets top="16" right="16" bottom="16" left="16"/>
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
